{% extends 'base.html.twig' %}

{% block title %}PDF-Craft | Compte{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Styles personnalisés */
        .container {
            max-width: 1140px;
        }

        .page-title {
            font-size: 2rem;
            margin-bottom: 1rem;
            text-align: center;
        }

        .card {
            background-color: #f3f4f6;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .card hr {
            border-color: #d1d5db;
            margin-top: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .alert {
            background-color: #fff5f5;
            color: #e53e3e;
            border-color: #e53e3e;
        }

        .btn-primary-color {
            background-color: #4f46e5;
            border-color: #4f46e5;
            color: #fff;
            font-weight: bold;
            text-transform: uppercase;
            transition: background-color 0.3s ease;
        }

        .btn-primary-color:hover {
            background-color: #4338ca;
            border-color: #4338ca;
        }

        .btn-primary-color:focus {
            box-shadow: 0 0 0 0.25rem rgba(79, 70, 229, 0.5);
        }
    </style>
{% endblock %}

{% block main %}
    <div class="container">
        <h1 class="page-title">Bienvenue {{ app.user.firstname }}</h1>
        <p class="text-muted">Accédez à vos informations personnelles et à vos souscriptions.</p>
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <h2>Vos informations personnelles</h2>
                    <hr>
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                    {% if edit == true %}
                        {{ form_start(form) }}
                        {{ form_row(form.firstname) }}
                        {{ form_row(form.lastname) }}
                        {{ form_row(form.email) }}
                        <button type="submit" class="btn btn-primary btn-primary-color">Enregistrer</button>
                        {{ form_end(form) }}
                    {% else %}
                        <ul>
                            <li>Prénom : {{ app.user.firstname }}</li>
                            <li>Nom : {{ app.user.lastname }}</li>
                            <li>Email : {{ app.user.email }}</li>
                        </ul>
                        <a href="{{ path('app_account', {'edit' : true}) }}" class="btn btn-primary btn-primary-color">Modifier</a>
                    {% endif %}
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <h2>Votre abonnement</h2>
                    <hr>
                    <div class="my_card my_card_presentation col-12 p-0 flex-grow-1">
                        <div class="card-content d-flex flex-column justify-content-between h-100">
                            <div class="card-banner d-flex flex-column align-items-center p-4">
                                <h3>{{ subscription.title }}</h3>
                                <h4 class="text-center">{{ subscription.price }} €/mois</h4>
                            </div>
                            <div class="card-body">
                                <h5 class="text-center">{{ subscription.pdfLimit }} PDFs/jour</h5>
                                <hr>
                                <p>{{ subscription.description }}</p>
                            </div>
                            <div class="card-footer d-flex justify-content-center mb-4">
                                <a href="{{ path('app_home') }}">
                                    <button class="btn btn-primary btn-primary-color">Changer d'abonnement</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
