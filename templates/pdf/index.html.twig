{% extends 'base.html.twig' %}

{% block title %}Hello PdfController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Ajout de styles personnalisés */
        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
        }

        .card {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
            overflow: hidden;
        }

        .page-title {
            font-size: 2rem;
            margin-bottom: 1rem;
            text-align: center;
            color: #333;
        }

        .btn-primary-color {
            background-color: #e50914;
            border-color: #e50914;
            color: #fff;
            font-weight: bold;
            text-transform: uppercase;
            transition: background-color 0.3s ease;
            border-radius: 5px;
            padding: 8px 20px;
        }

        .btn-primary-color:hover {
            background-color: #cc0811;
            border-color: #cc0811;
        }

        .col-centered {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }
    </style>
{% endblock %}

{% block main %}
    <div class="container">
        <div class="card">
            <h2 class="page-title">Générer PDF à partir d'une URL</h2>
            <div class="col-lg-6 col-md-8 col-sm-10 col-12 m-auto">
                {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.url) }}

                <button class="btn btn-primary-color" type="submit" data-turbo-action="replace" data-turbo-frame="form-result">
                    Générer
                </button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
